<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="16"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:textAlignment="textEnd"
        android:gravity="center"
        android:text="0"
        android:id="@+id/pheptinh"
        android:textSize="40dp"
        android:background="@drawable/boder"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        tools:ignore="RtlCompat"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>
    <LinearLayout
        android:background="#504C4C"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="11"
        android:orientation="vertical"
        android:layout_weight="11">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="5"
                android:layout_weight="1">
                <Button
                    android:text="OFF"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="MRC"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="M-"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="M+"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:text="%"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="^"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="MC"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:text="MR"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
                <Button
                    android:id="@+id/chia"
                    android:text="/"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></Button>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <Button
                android:text="+/-"
                android:backgroundTint="#938C8C"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/nhan"
                android:text="X"
                android:backgroundTint="#938C8C"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <Button
                android:text="#"
                android:backgroundTint="#938C8C"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/four"
                android:text="4"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/five"
                android:text="5"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/six"
                android:text="6"
                android:backgroundTint="#F6F1F1"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
            <Button
                android:id="@+id/tru"
                android:text="-"
                android:backgroundTint="#938C8C"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></Button>
        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:text="CE"
                        android:backgroundTint="#FF9800"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/one"
                        android:text="1"
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/two"
                        android:text="2"
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/three"
                        android:text="3"
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>
                <LinearLayout
                    android:weightSum="4"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:id="@+id/delete"
                        android:text="On/C"
                        android:backgroundTint="#FF9800"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/zero"
                        android:text="0"
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/cham"
                        android:text="."
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/bang"
                        android:text="="
                        android:backgroundTint="#F6F1F1"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/cong"
                    android:text="+"
                    android:backgroundTint="#938C8C"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
